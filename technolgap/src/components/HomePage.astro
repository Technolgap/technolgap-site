<script>
  document.addEventListener('DOMContentLoaded', () => {
    document.querySelector('.sponsor-button')?.addEventListener('click', () => {
      window.location.href = '/sponsors';
    });
    document.querySelector('.conference-button')?.addEventListener('click', () => {
      window.location.href = '/conference';
    });
    document.querySelector('.tech-nol-hack')?.addEventListener('click', () => {
      window.location.href = '/technolhack';
    });
  });
</script>
